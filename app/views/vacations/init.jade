extends ../shared/template
block content
  .row
    .col-xs-4
      form(role='form', method='post', action='/vacations')
        input#lat(type='hidden', name='lat')
        input#lng(type='hidden', name='lng')
        .form-group
          label(for='name') Destination
          input.form-control#name(name='name', type='text', placeholder='Argentina', autofocus=true)
        .form-group
          label(for='start') Start Date
          input.form-control#start(name='end', type='date')
        .form-group
          label(for='end') End Date
          input.form-control#end(name='end', type='date')
        button.btn.btn-success(type='submit') Add Vacation
     .col-xs-8

block scripts
  script(src='/js/user/new-vacations.js')

